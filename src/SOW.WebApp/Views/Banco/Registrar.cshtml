@model SOW.Aplicacao.ViewModels.Bancos.BancoRegistrarViewModel

@{
    ViewData["Title"] = "Registrar";
}

<h1>Registrar</h1>

<h4>Bancos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" min="3" maxlength="3" onkeypress='return somenteNumero(event)'/>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" maxlength="100"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" />
                <a asp-action="Index" class="btn btn-primary" >Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
